{% extends 'base.html.twig' %}

{% block title %}Discount{% endblock %}

{% block body %}
    <h1>Discount</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ discount.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ discount.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ discount.description }}</td>
            </tr>
            <tr>
                <th>Discount_percent</th>
                <td>{{ discount.discountPercent }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ discount.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ discount.createdAt ? discount.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modified_at</th>
                <td>{{ discount.modifiedAt ? discount.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Deleted_at</th>
                <td>{{ discount.deletedAt ? discount.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('discount_index') }}">back to list</a>

    <a href="{{ path('discount_edit', {'id': discount.id}) }}">edit</a>

    {{ include('discount/_delete_form.html.twig') }}
{% endblock %}
